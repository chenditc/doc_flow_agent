#############################
# Orchestrator Service Image
# Multi-stage build for smaller runtime image
#############################

FROM python:3.12-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
	PYTHONUNBUFFERED=1 \
	PIP_NO_CACHE_DIR=1 \
	PIP_DISABLE_PIP_VERSION_CHECK=1 \
	PYTHONPATH=/app

WORKDIR /app

# Setup china mirror for debian packages,  /etc/apt/sources.list  not exists
RUN sed -i 's/deb.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/security.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/ports.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/old-releases.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources

# System deps (curl for healthcheck, build tools if needed)
RUN apt-get update && apt-get install -y --no-install-recommends \
	build-essential curl && \
	rm -rf /var/lib/apt/lists/*

# Copy only requirements first for caching
COPY requirements.txt ./
RUN pip config set global.index-url http://mirrors.aliyun.com/pypi/simple && pip config set global.trusted-host mirrors.aliyun.com && pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose orchestrator API port
EXPOSE 8001

# Create mount points for runtime data (volumes in compose)
RUN mkdir -p traces jobs schedules log
VOLUME ["/app/traces", "/app/jobs", "/app/log"]

# Healthcheck queries the FastAPI endpoint once server is up
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
	CMD curl -f http://localhost:8001/health || exit 1

# Default command runs uvicorn for orchestrator API
CMD ["uvicorn", "orchestrator_service.api:app", "--host", "0.0.0.0", "--port", "8001"]

