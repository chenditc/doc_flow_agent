#############################
# Visualization API Service Image
#############################

FROM node:20-alpine AS frontend-build

WORKDIR /frontend

# Install dependencies and build the React app
COPY visualization/frontend-react/package*.json ./
RUN npm ci
COPY visualization/frontend-react/ ./
RUN npm run build

#############################
# Backend / Final Runtime Image
#############################
FROM python:3.12-slim AS base

ENV PYTHONDONTWRITEBYTECODE=1 \
	PYTHONUNBUFFERED=1 \
	PIP_NO_CACHE_DIR=1 \
	PIP_DISABLE_PIP_VERSION_CHECK=1 \
	PYTHONPATH=/app

WORKDIR /app

# Setup china mirror for debian packages,  /etc/apt/sources.list  not exists
RUN sed -i 's/deb.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/security.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/ports.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources \
	&& sed -i 's/old-releases.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources

RUN apt-get update && apt-get install -y --no-install-recommends \
	build-essential curl ripgrep && \
	rm -rf /var/lib/apt/lists/*

# Setup china mirror for pip
RUN pip config set global.index-url http://mirrors.aliyun.com/pypi/simple && pip config set global.trusted-host mirrors.aliyun.com
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Copy only parts needed for visualization to reduce context (still copy all for simplicity now)
COPY . .

# Copy built frontend dist from build stage into expected location
COPY --from=frontend-build /frontend/dist /app/visualization/frontend-react/dist

EXPOSE 8000

# Ensure directories exist (volumes will mount)
# Ensure runtime directories exist (dist already copied)
RUN mkdir -p traces log
VOLUME ["/app/traces", "/app/log"]

HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
	CMD curl -f http://localhost:8000/health || exit 1

CMD ["uvicorn", "visualization.server.viz_server:app", "--host", "0.0.0.0", "--port", "8000"]

